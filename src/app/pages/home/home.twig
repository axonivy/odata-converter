{% extends "_parts/base.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block content %}

<div style="text-align:center;">
  <p style="font-size:18px;">Convert your OData specification to OpenAPI</p>
          <br />   
  <form method="post" enctype="multipart/form-data">
    <input type="file" name="specfile" />
            
    <br />
    <input type="submit" name="convert" value="🔄 Convert" />
  </form>

<br />
  <p style="font-size:18px;">Successfully converted <span style="font-weight:bold;font-size:24px;">{{ convertedNumber }}</span> OData specifications 👍</p>

   <br />
   <br />
  
</div>

{% endblock %}
